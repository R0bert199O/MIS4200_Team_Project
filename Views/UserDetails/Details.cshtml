                            string strLocations = Convert.ToString(@Html.DisplayFor(model => model.locations)).Replace("_", " ");





                            if (strFilePathFull == "/Images/")
                            {
                                strProfilePicture = "Avatar.png";
                            }
                            else
                            {
                                strProfilePicture = strFilePath2;
                            }
                        }

