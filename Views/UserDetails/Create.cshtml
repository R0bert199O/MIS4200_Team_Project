                @Html.EnumDropDownListFor(model => model.JobTitle, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.JobTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.operatingGroups, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.operatingGroups, htmlAttributes: new { @class = "form-control" })
